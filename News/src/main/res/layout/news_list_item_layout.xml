<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/newsitem_ll2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:paddingLeft="12dp"
    android:paddingRight="12dp">

    <ImageView
        android:id="@+id/newsitem_img"
        android:layout_width="80dp"
        android:layout_height="58dp"
        android:layout_centerVertical="true"
        android:src="@drawable/lehuo_bg"
        android:scaleType="centerCrop"/>

    <RelativeLayout
        android:id="@+id/nitem_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/newsitem_img">

        <TextView
            android:id="@+id/newsitem_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:layout_marginRight="5dp"
            android:minLines="2"
            android:textColor="@color/black"
            android:textSize="19sp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/newsitem_title"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/nli_foot"
                android:layout_width="50dp"
                android:layout_height="22dp"
                android:scaleType="fitXY"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/newsitem_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:maxLines="1"
                android:text="09-27"
                android:visibility="gone"
                android:drawableLeft="@drawable/zq_icon_updatetime"
                android:layout_alignParentRight="true"
                android:drawablePadding="3dp"
                android:layout_marginLeft="12dp"
                android:textColor="@color/zqzx_font_light"
                android:gravity="center_vertical"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/newsitem_commentcount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_alignParentRight="true"
                android:layout_toLeftOf="@id/newsitem_time"
                android:visibility="invisible"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/zq_icon_comment"
                android:drawablePadding="2dp"
                android:textColor="@color/zqzx_font_light"
                android:textSize="14sp"/>


        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>

