<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingLeft="15dp"
              android:paddingRight="15dp"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:paddingLeft="8dp"
        android:paddingRight="4dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/zqzx_album_lightpink">

        <TextView
            android:id="@+id/img_content_id5"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/img_number_id5"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="18sp"
            android:text="6"
            android:background="@drawable/zq_album_circlepink_shape"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_img5_id1"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:src="@drawable/lehuo_bg"/>

        <ImageView
            android:id="@+id/img_img5_id2"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:src="@drawable/lehuo_bg"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/img_img5_id3"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:scaleType="centerCrop"
        android:src="@drawable/lehuo_bg"
        android:layout_marginBottom="1dp"
        android:layout_marginTop="1dp"
        />

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_img5_id4"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:src="@drawable/lehuo_bg"/>

        <ImageView
            android:id="@+id/img_img5_id5"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:src="@drawable/lehuo_bg"/>
    </LinearLayout>

</LinearLayout>