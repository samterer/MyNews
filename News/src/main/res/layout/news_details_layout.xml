<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/news_detail_root"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/zqzx_bg_light">

        <LinearLayout
            android:id="@+id/news_detail_main_root_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/news_detail_layout"
                android:layout_width="fill_parent"
                android:layout_height="50dp">

                <LinearLayout
                    android:id="@+id/news_detail_bak"
                    android:layout_width="50dip"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/news_detail_bak_img"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="15dip"
                        android:background="@drawable/zq_newsdetailback_selector"
                        android:focusable="true"
                        android:focusableInTouchMode="true"/>
                </LinearLayout>
                <!-- news_detail_title_content -->

                <LinearLayout
                    android:id="@+id/newsdetails_title_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="invisible">

                    <TextView
                        android:id="@+id/newsdetails_title_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="8dp"
                        android:background="@drawable/zq_commetnum_selector"
                        android:textColor="@color/white"
                        android:textSize="16sp"/>
                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/zqzx_bg_dark"/>

            <com.hzpd.custorm.CustomScrollView
                android:id="@+id/news_detail_root_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.hzpd.custorm.CustomWebView
                    android:id="@+id/webview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/zqzx_bg_light"
                    android:layerType="software"
                    android:overScrollMode="never">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:background="@color/zqzx_bg_light"
                        android:orientation="vertical"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp">

                        <TextView
                            android:id="@+id/news_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/zqzx_bg_light"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textColor="@color/zqzx_font_dark"
                            android:textSize="20sp"/>

                        <TextView
                            android:id="@+id/news_time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:background="@color/zqzx_bg_light"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/zqzx_font_normal"
                            android:textSize="13sp"/>

                    </LinearLayout>
                </com.hzpd.custorm.CustomWebView>

                <com.avatarqing.loadmore.lib.LoadMoreListViewContainer
                    android:id="@+id/load_more_list_view_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ListView
                        android:id="@+id/comment_listview"
                        android:divider="#40444444"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </com.avatarqing.loadmore.lib.LoadMoreListViewContainer>
            </com.hzpd.custorm.CustomScrollView>

        </LinearLayout>

        <ImageView
            android:id="@+id/news_detail_nonetwork"
            android:layout_width="107dp"
            android:layout_height="149dp"
            android:layout_centerInParent="true"
            android:src="@drawable/zqzx_nonetwork"
            android:visibility="gone"/>
        <!-- 底部 -->
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/news_detail_ll_bottom1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/zqzx_bg_normal"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/newdetail_tv_comm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/zq_newsdetail_greyboder_shape"
            android:text="@string/prompt_write_comment"
            android:textColor="@color/zqzx_font_light"
            android:textSize="16sp"
            android:visibility="invisible"/>

        <ImageView
            android:id="@+id/newdetail_fontsize"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="13dp"
            android:contentDescription="@null"
            android:src="@drawable/zqzx_fontsize"/>

        <ImageView
            android:id="@+id/newdetail_share"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="13dp"
            android:contentDescription="@null"
            android:src="@drawable/zqzx_bt_share"/>

        <ImageView
            android:id="@+id/newdetail_collection"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="13dp"
            android:contentDescription="@null"
            android:src="@drawable/zqzx_nd_collection"/>
    </LinearLayout>


</LinearLayout>