<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@color/white">

    <com.hzpd.ui.widget.FontTextView
        android:id="@+id/vote_detail_tv_right"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:textSize="16sp"
        android:text="sd"
        android:layout_marginLeft="12dp"
        android:textColor="@color/black"/>

    <com.hzpd.ui.widget.FontTextView
        android:id="@+id/vote_detail_tv_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="sd"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:textColor="@color/black"/>

    <ListView
        android:id="@+id/vote_detail_lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:divider="#00000000"
        android:listSelector="@drawable/listview_selecter"
        android:scrollbarTrackVertical="@color/transparent"
        android:scrollbars="vertical"
        android:cacheColorHint="@color/transparent"
        />
</LinearLayout>
