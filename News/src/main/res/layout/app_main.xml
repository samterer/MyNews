<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <!--标题栏-->
    <RelativeLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/toolbar_bg">

        <RelativeLayout
            android:id="@+id/main_title_left"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:background="@drawable/title_bar_btn_selector1"
            android:clickable="true">

            <ImageView
                android:id="@+id/main_title_left_img"
                android:layout_width="20dp"
                android:layout_height="18dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="8dp"
                android:contentDescription="@null"
                android:src="@drawable/main_title_leftset_select" />
        </RelativeLayout>

        <com.hzpd.ui.widget.BritannicboldTextView
            android:id="@+id/title_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/main_title_left"
            android:paddingBottom="6.5dp"
            android:text="标题"
            android:textColor="?title_name_color"
            android:textSize="18sp" />

        <RelativeLayout
            android:id="@+id/main_title_right"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@drawable/title_bar_btn_selector"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/main_title_right_img"
                android:layout_width="20dp"
                android:layout_height="16.5dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="8dp"
                android:src="@drawable/main_title_search_r" />
        </RelativeLayout>
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>