<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--标题栏-->
        <RelativeLayout
            android:id="@+id/title_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/main_title_bar"
            android:background="?title_bar_color"
            android:visibility="gone">

            <RelativeLayout
                android:id="@+id/main_title_left"
                android:layout_width="@dimen/main_title_bar"
                android:layout_height="match_parent"
                android:background="?m_background_tab_pressed"
                android:clickable="true">

                <ImageView
                    android:id="@+id/main_title_left_img"
                    android:layout_width="20dp"
                    android:layout_height="18dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="8dp"
                    android:contentDescription="@null"
                    android:src="@drawable/main_title_leftset_select" />
            </RelativeLayout>

            <com.hzpd.ui.widget.BritannicboldTextView
                android:id="@+id/title_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/main_title_left"
                android:paddingBottom="6.5dp"
                android:text="标题"
                android:textColor="?title_bar_name_color"
                android:textSize="18sp" />

            <RelativeLayout
                android:id="@+id/main_title_right"
                android:layout_width="@dimen/main_title_bar"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="?m_background_tab_pressed"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/main_title_right_img"
                    android:layout_width="20dp"
                    android:layout_height="16.5dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="8dp"
                    android:src="@drawable/main_title_search_r" />
            </RelativeLayout>
        </RelativeLayout>

        <com.hzpd.custorm.MyViewPager
            android:id="@+id/main_pager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_above="@+id/tab_menu_line"
            android:layout_alignWithParentIfMissing="true"
            android:layout_weight="1" />

        <View
            android:id="@+id/tab_menu_line"
            style="@style/line_v"
            android:layout_above="@+id/lv_tab_menu" />

        <LinearLayout
            android:id="@+id/lv_tab_menu"
            android:layout_width="match_parent"
            android:layout_height="@dimen/tabmenu_with"
            android:layout_alignParentBottom="true"
            android:background="#fafafa"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_tab_menu0"
                style="@style/main_tab_item2"
                android:drawablePadding="0dp"
                android:drawableTop="@drawable/tabmenu_recommend"
                android:text="@string/main_menu0_text" />

            <TextView
                android:id="@+id/tv_tab_menu1"
                style="@style/main_tab_item2"
                android:drawableTop="@drawable/tabmenu_rank"
                android:text="@string/main_menu1_text" />

            <TextView
                android:id="@+id/tv_tab_menu2"
                style="@style/main_tab_item2"
                android:drawableTop="@drawable/tabmenu_my"
                android:gravity="center"
                android:text="@string/main_menu2_text" />
        </LinearLayout>

        <FrameLayout
            android:id="@+id/root"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />
    </LinearLayout>


</FrameLayout>