<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_title_bar"
        android:background="@color/toolbar_bg"
        >

        <ImageView
            android:id="@+id/stitle_ll_back1"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/main_title_bar"
            android:layout_gravity="center_vertical"
            android:src="@drawable/background_tab_pressed_selector"
            android:visibility="gone" />

        <!--返回按钮-->
        <LinearLayout
            android:id="@+id/news_detail_bak"
            android:layout_width="@dimen/main_title_bar"
            android:layout_height="match_parent"
            android:clickable="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/stitle_ll_back"
                android:layout_width="@dimen/main_title_bar"
                android:layout_height="@dimen/main_title_bar"
                android:layout_gravity="center_vertical"
                android:src="@drawable/background_tab_pressed_selector" />
        </LinearLayout>

        <com.hzpd.ui.widget.FontTextView
            android:id="@+id/stitle_tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/news_detail_bak"
            android:text="@string/prompt_column_subscribe"
            android:textColor="@color/white"
            android:textSize="22sp" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/mycomments_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:visibility="gone">

        <com.hzpd.ui.widget.FontTextView
            android:id="@+id/mycoms_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:padding="10dp"
            android:text="我的评论数"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1px"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/light_color_line" />
    </LinearLayout>


    <!--android:divider="@color/zqzx_bg_dark"
            android:dividerHeight="1px"-->
    <com.handmark.pulltorefresh.library.PullToRefreshListView xmlns:ptr="http://schemas.android.com/apk/res-auto"
        android:id="@+id/pushmsg_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="@android:color/transparent"
        android:descendantFocusability="blocksDescendants"
        android:divider="@color/zqzx_bg_dark"
        android:dividerHeight="0dp"
        android:fastScrollEnabled="false"
        android:listSelector="@android:color/transparent"
        android:scrollbarThumbVertical="@drawable/base_list_scrollbar_handle"
        android:scrollbarTrackVertical="@color/transparent"
        android:scrollbars="vertical"
        ptr:ptrDrawable="@drawable/default_ptr_rotate"
        ptr:ptrAnimationStyle="flip"
        ptr:ptrHeaderSubTextColor="@color/grey_font"
        ptr:ptrHeaderTextColor="@color/pulltorefresh_font" />

    <ImageView
        android:id="@+id/pushmsg_tv_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/zqzx_nonetwork" />


    <com.mingle.widget.LoadingView
        android:id="@+id/loadView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        app:loadingText="@string/load_more_loading" />

</LinearLayout>
