<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:paddingTop="4dp"
              android:paddingBottom="4dp"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/zqzx_font_light"
            android:drawableLeft="@drawable/zq_icon_comment"
            android:drawablePadding="4dp"
            android:text="@string/prompt_i_has_comment"/>

        <TextView
            android:id="@+id/cm_item_tv_comstate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="@color/white"
            android:layout_marginRight="4dp"
            android:layout_marginLeft="4dp"
            android:text="@string/prompt_auditing"
            android:background="@drawable/comment_item_shape"/>

        <TextView
            android:id="@+id/mycomments_itemc_tv_prise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/grey_font"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="8dp"
            android:drawableLeft="@drawable/bt_zan_unselected"
            android:drawablePadding="3dp"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/mycomments_itemc_tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:textColor="@color/grey_font"/>

    <TextView
        android:id="@+id/mycomments_itemc_tv_sj_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/itemtime"
        android:text="09-27 "
        android:drawablePadding="3dp"
        android:textColor="@color/grey22"
        android:gravity="center_vertical"
        android:textSize="16sp"/>

</LinearLayout>
