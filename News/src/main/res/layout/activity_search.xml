<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/search_title_container"
            android:layout_width="match_parent"
            android:layout_height="50dp"></View>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="@dimen/main_title_bar"
            android:background="@color/toolbar_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/title_bar_applist_btn_back"
                android:layout_width="@dimen/main_title_bar"
                android:layout_height="@dimen/main_title_bar"
                android:layout_gravity="center_vertical"
                android:src="@drawable/background_tab_pressed_selector" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <AutoCompleteTextView

                        android:id="@+id/search_src_text"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="left|center_vertical"
                        android:layout_weight="1"
                        android:background="@color/transparent"
                        android:gravity="left|center_vertical"
                        android:hint="@string/search_empty_content"
                        android:inputType="text"
                        android:paddingLeft="5dp"
                        android:paddingRight="0dp"
                        android:textColor="#ffffff"
                        android:textColorHint="#c5cae9"
                        android:textCursorDrawable="@null"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/search_cancel"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/title_bar_btn_selector"
                        android:scaleType="centerInside"
                        android:src="@drawable/app_search_cancle" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#7481ca">

                </View>


            </LinearLayout>

            <ImageView
                android:id="@+id/search_button"
                android:layout_width="@dimen/main_title_bar"
                android:layout_height="@dimen/main_title_bar"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:background="@drawable/rightfrag_sett_selector"
                android:gravity="center"
                android:scaleType="centerInside" />

        </LinearLayout>


    </FrameLayout>

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></FrameLayout>
</LinearLayout>