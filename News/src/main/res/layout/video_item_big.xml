<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:paddingLeft="15dp"
              android:paddingRight="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:paddingLeft="8dp"
        android:paddingRight="4dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="6dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@drawable/zq_video_bg_shape">

        <TextView
            android:id="@+id/vib_tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/zqzx_font_normal"
            android:textSize="20sp"/>

        <ImageView
            android:id="@+id/vib_iv_icon"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:textColor="@color/white"
            android:background="@drawable/zq_video_green"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/zq_video_ll_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:visibility="gone"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/zq_video_tv_comments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/zqzx_font_light"
            android:textSize="16sp"
            android:drawablePadding="4dp"
            android:visibility="gone"
            android:drawableLeft="@drawable/zq_icon_comment"
            android:text="23"/>

        <TextView
            android:id="@+id/zq_video_tv_updatetime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/zqzx_font_light"
            android:textSize="16sp"
            android:drawablePadding="4dp"
            android:layout_marginLeft="8dp"
            android:drawableLeft="@drawable/zq_icon_updatetime"
            android:text="1s"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/vib_iv_img"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/default_bg"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="8dp"
        android:contentDescription="@null"
        android:scaleType="fitXY"/>

</LinearLayout>