<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <include
        android:id="@+id/editcolum_include"
        layout="@layout/stitle_layout"/>

    <com.hzpd.adapter.editcolumn.DragGridView
        android:id="@+id/editcolumn_dragGridView"
        android:listSelector="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:cacheColorHint="@android:color/transparent"
        android:gravity="center"
        android:layout_below="@id/editcolum_include"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:verticalSpacing="10dp"
        android:horizontalSpacing="8dp"
        android:stretchMode="columnWidth"
        android:numColumns="4"
        >

    </com.hzpd.adapter.editcolumn.DragGridView>


    <LinearLayout
        android:id="@+id/editcolumn_divider_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/editcolumn_dragGridView">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/editColumn_line"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="@string/prompt_click_to_add_or_cancel"
            android:textSize="18sp"
            android:background="@color/grey_divider"
            android:textColor="@color/editColumn_fontgrey"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/editColumn_line"/>
    </LinearLayout>

    <GridView
        android:id="@+id/editcolumn_gridview"
        android:layout_below="@id/editcolumn_divider_ll"
        android:listSelector="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:cacheColorHint="@android:color/transparent"
        android:columnWidth="90dp"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:verticalSpacing="10dp"
        android:horizontalSpacing="10dp"
        android:stretchMode="columnWidth"
        android:numColumns="4">
    </GridView>

    <TextView
        android:id="@+id/editcolumn_item_tv"
        android:layout_width="70dp"
        android:layout_height="35dp"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:gravity="center"
        android:visibility="gone"
        android:background="@drawable/editcolumn_shape"/>

</RelativeLayout>
