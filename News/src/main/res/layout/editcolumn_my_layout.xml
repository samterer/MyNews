<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fafafa">


    <include
        android:id="@+id/editcolum_include"
        layout="@layout/stitle_layout" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/editcolum_include"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--提醒-->
            <LinearLayout
                android:id="@+id/editcolumn_remind_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <com.hzpd.ui.widget.FontTextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#fffaec"
                    android:drawableLeft="@drawable/tips"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:text="@string/prompt_click_to_add_or_cancel"
                    android:textColor="#f1b159"
                    android:textSize="16sp" />

            </LinearLayout>

            <!--我的频道-->
            <LinearLayout
                android:id="@+id/editcolumn_my_channel_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/editcolumn_remind_ll"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#f2e4d3" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <com.hzpd.ui.widget.FontTextView
                        android:id="@+id/my_channel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingLeft="15dp"
                        android:text="@string/edit_my_colum"
                        android:textColor="@color/subscribe_item_text_color_normal"
                        android:textSize="16sp" />

                    <com.hzpd.ui.widget.FontTextView
                        android:id="@+id/editcolum_explain"
                        android:layout_alignParentBottom="true"
                        android:layout_width="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_toRightOf="@+id/my_channel"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="10dp"
                        android:text="@string/prompt_click_to_add_or_cancel"
                        android:textSize="12sp"
                        android:visibility="gone"
                        />

                    <com.hzpd.ui.widget.FontTextView
                        android:id="@+id/text_editcolumn"
                        android:layout_width="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="23dp"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/btn_order"
                        android:gravity="center"
                        android:paddingBottom="2dp"
                        android:paddingLeft="18dp"
                        android:paddingRight="18dp"
                        android:paddingTop="2dp"
                        android:text="@string/editcolumn_edit"
                        android:textColor="#ff7e00"
                        android:textSize="12sp" />


                </RelativeLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/editColumn_line"
                    android:visibility="gone" />
            </LinearLayout>

            <com.hzpd.custorm.DragGrid
                android:id="@+id/editcolumn_dragGridView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:cacheColorHint="@android:color/transparent"
                android:gravity="center"
                android:horizontalSpacing="8dp"
                android:listSelector="@android:color/transparent"
                android:numColumns="3"
                android:stretchMode="columnWidth"
                android:verticalSpacing="10dp"></com.hzpd.custorm.DragGrid>

            <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_below="@id/editcolumn_dragGridView"
                android:background="#e6e6e6" />

            <!--推荐频道-->
            <LinearLayout
                android:id="@+id/editcolumn_divider_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/line"
                android:layout_marginTop="15dp"
                android:orientation="vertical">

                <com.hzpd.ui.widget.FontTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:text="@string/edit_other_colum"
                    android:textColor="@color/subscribe_item_text_color_normal"
                    android:textSize="16sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/editColumn_line"
                    android:visibility="gone" />
            </LinearLayout>

            <TextView
                android:id="@+id/choose_tab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/corners_bg"
                android:drawableLeft="@drawable/choose_tab_search"
                android:drawablePadding="3dp"
                android:padding="5dp"
                android:paddingLeft="10dp"
                android:text="输入你感兴趣的任意频道"
                android:textColor="@color/pulltorefresh_font"
                android:textSize="12sp" />

            <com.hzpd.custorm.OtherGridView
                android:id="@+id/editcolumn_gridview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:cacheColorHint="@android:color/transparent"
                android:gravity="center"
                android:horizontalSpacing="8dp"
                android:listSelector="@android:color/transparent"
                android:numColumns="3"
                android:stretchMode="columnWidth"
                android:verticalSpacing="10dp">

            </com.hzpd.custorm.OtherGridView>
        </LinearLayout>
    </ScrollView>

    <include
        android:id="@+id/category_layout"
        layout="@layout/channel_item"
        android:visibility="gone" />


    <com.hzpd.ui.widget.FontTextView
        android:id="@+id/editcolumn_item_tv"
        android:layout_width="70dp"
        android:layout_height="35dp"
        android:background="@drawable/editcolumn_shape"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:visibility="gone" />

</RelativeLayout>
