<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">

    <TextView
        android:id="@+id/lotterypi_tv_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/horn"
        android:layout_marginTop="30dp"
        android:drawablePadding="5dp"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:textColor="@color/grey_font"
        android:textSize="16sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/login_shape"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/lotterypi_uname"
            android:layout_width="match_parent"
            android:layout_height="60dip"
            android:layout_marginLeft="8dip"
            android:background="@color/transparent"
            android:ems="10"
            android:hint="@string/prompt_real_name"
            android:maxLines="1"
            android:paddingBottom="3dip"
            android:paddingLeft="3dip"
            android:paddingRight="3dip"
            android:paddingTop="3dip"
            android:textColor="@color/black"
            android:textCursorDrawable="@null"
            android:textSize="16sp">
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/login_shape"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/lotterypi_phone"
            android:layout_width="match_parent"
            android:layout_height="60dip"
            android:layout_marginLeft="8dip"
            android:background="@color/transparent"
            android:hint="@string/prompt_phone_number"
            android:maxLines="1"
            android:paddingBottom="3dip"
            android:paddingLeft="3dip"
            android:paddingRight="3dip"
            android:paddingTop="3dip"
            android:textColor="@color/black"
            android:textCursorDrawable="@null"
            android:textSize="16sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/login_shape"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/lotterypi_add"
            android:layout_width="match_parent"
            android:layout_height="60dip"
            android:layout_marginLeft="8dip"
            android:background="@color/transparent"
            android:hint="@string/hint_award_send_address"
            android:maxLines="1"
            android:paddingBottom="3dip"
            android:paddingLeft="3dip"
            android:paddingRight="3dip"
            android:paddingTop="3dip"
            android:textColor="@color/black"
            android:textCursorDrawable="@null"
            android:textSize="16sp"/>
    </LinearLayout>

    <Button
        android:id="@+id/lotterypi_submit"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/login_bt_login_selector"
        android:text="@string/prompt_submit"
        android:textColor="@color/white"
        android:textSize="20sp"/>

</LinearLayout>