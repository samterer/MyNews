<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="50dp"
              android:orientation="horizontal"
              android:background="@null">

    <ImageButton
        android:id="@+id/pop_share_ib_sina"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@null"
        android:src="@drawable/zqzx_share_sina"
        android:scaleType="fitXY"/>

    <ImageButton
        android:id="@+id/pop_share_ib_weixin"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@null"
        android:src="@drawable/zqzx_share_weixin"
        android:scaleType="fitXY"/>

    <ImageButton
        android:id="@+id/pop_share_ib_pengyouquan"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@null"
        android:src="@drawable/zqzx_share_pengyouquan"
        android:scaleType="fitXY"/>

</LinearLayout>
