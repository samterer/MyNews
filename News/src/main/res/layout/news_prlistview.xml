<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/nil_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5">

    <com.handmark.pulltorefresh.library.PullToRefreshScrollView
        xmlns:ptr="http://schemas.android.com/apk/res-auto"
        android:id="@+id/news_item_sv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        ptr:ptrDrawable="@drawable/default_ptr_rotate"
        ptr:ptrHeaderSubTextColor="@color/zqzx_font_light"
        ptr:ptrHeaderTextColor="@color/zqzx_font_dark"
        ptr:ptrMode="both">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--顶部循环和标题-->
            <RelativeLayout
                android:id="@+id/news_viewpage_myroot"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="20dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="10dp"
                android:background="#f5f5f5"
                android:orientation="vertical"
                android:visibility="gone">

                <!-- 顶部循环展示栏-->
                <com.hzpd.custorm.TopPicViewPager
                    android:id="@+id/test_pager"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    />

                <!--滑动图片标题-->
                <LinearLayout
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    >

                    <!-- android:drawableLeft="@drawable/zq_icon_pic"
                     android:drawablePadding="8dp"-->
                    <com.hzpd.ui.widget.FontTextView
                        android:id="@+id/viewpage_txt_id"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:paddingLeft="16dp"
                        android:singleLine="true"
                        android:textColor="@color/top_title_color"
                        android:textSize="15sp" />

                    <com.hzpd.ui.widget.FontTextView
                        android:id="@+id/viewpage_txt_Molecular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/red"
                        android:textSize="18sp" />

                    <com.hzpd.ui.widget.FontTextView
                        android:id="@+id/viewpage_txt_Denominator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="8dp"
                        android:paddingRight="16dp"
                        android:textColor="@color/zqzx_font_normal"
                        android:textSize="14sp" />
                </LinearLayout>

            </RelativeLayout>


            <com.hzpd.custorm.ListViewInScrollView
                android:id="@+id/news_item_listview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="1px"
                android:layout_marginRight="12dp"
                android:layout_marginLeft="12dp"
                android:cacheColorHint="@android:color/transparent"
                android:descendantFocusability="blocksDescendants"
                android:divider="#f5f5f5"
                android:dividerHeight="10dp"
                android:fadingEdge="none"
                android:fastScrollEnabled="false"
                android:focusableInTouchMode="true"
                android:listSelector="@drawable/listview_selecter"
                android:paddingTop="10dp"
                android:scrollbarThumbVertical="@drawable/base_list_scrollbar_handle"
                android:scrollbarTrackVertical="@color/transparent"
                android:scrollbars="vertical"
                android:smoothScrollbar="true" />

            <ImageView
                android:id="@+id/news_item_iv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@null"
                android:padding="@dimen/nonetworkpadding" />
        </LinearLayout>
    </com.handmark.pulltorefresh.library.PullToRefreshScrollView>

</RelativeLayout>