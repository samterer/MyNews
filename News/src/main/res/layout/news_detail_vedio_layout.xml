<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="10dp"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/news_detail_vedio_img_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@null"
            android:src="@drawable/default_bg"
            android:scaleType="centerCrop"/>

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerInParent="true"
            android:contentDescription="@null"
            android:visibility="gone"
            android:src="@drawable/zqzx_video_play"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.6"
        android:orientation="vertical"
        android:visibility="gone">

        <com.hzpd.ui.widget.FontTextView
            android:id="@+id/news_detail_vedio_title_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textSize="16sp"/>

        <com.hzpd.ui.widget.FontTextView
            android:id="@+id/news_detail_vedio_time_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dip"
            android:layout_weight="1"
            android:textColor="@color/gray_bg"
            android:textSize="14sp"/>

        <com.hzpd.ui.widget.FontTextView
            android:id="@+id/news_detail_vedio_from_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dip"
            android:layout_weight="1"
            android:textColor="@color/gray_bg"
            android:textSize="14sp"/>
    </LinearLayout>
</LinearLayout>
