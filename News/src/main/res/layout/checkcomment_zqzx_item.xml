<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:paddingTop="4dp">

    <RelativeLayout
        android:id="@+id/cm_item_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:background="@color/toolbar_bg"
        android:paddingBottom="6dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="6dp">

        <com.hzpd.ui.widget.FontTextView
            android:id="@+id/cm_item_tv_t"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="18sp"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <com.hzpd.ui.widget.FontTextView
            android:id="@+id/cm_item_tv_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/grey_font"
            android:textSize="14sp"/>

        <com.hzpd.ui.widget.FontTextView
            android:id="@+id/cm_item_tv_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:textColor="@color/grey_font"
            android:textSize="14sp"/>

        <com.hzpd.ui.widget.FontTextView
            android:id="@+id/cm_item_tv_comstate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:background="@drawable/comment_item_shape"
            android:text="@string/prompt_auditing"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/cm_item_ll_praise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="6dp"
            android:paddingBottom="6dp"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/cm_item_num_img"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:contentDescription="@null"
                android:src="@drawable/bt_zan_unselected"/>

            <RelativeLayout
                android:layout_width="20dp"
                android:layout_height="match_parent">

                <com.hzpd.ui.widget.FontTextView
                    android:id="@+id/cm_item_num_pl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:paddingLeft="1dp"
                    android:text="102"
                    android:textColor="@color/grey_font"
                    android:textSize="15sp"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <com.hzpd.ui.widget.FontTextView
        android:id="@+id/cm_item_tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:textColor="@color/black"
        android:textSize="18sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="8dp"
        android:background="@color/grey_divider"/>

</LinearLayout>