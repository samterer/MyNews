<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="10dp">

    <ImageView
        android:id="@+id/special_lvitem_iv"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:contentDescription="@null"
        android:scaleType="centerCrop"
        android:src="@drawable/lehuo_bg"/>

    <TextView
        android:id="@+id/special_lvitem_tv_con"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/special_lvitem_iv"
        android:layout_below="@id/special_lvitem_iv"
        android:layout_marginTop="10dp"
        android:background="@drawable/zq_special_greyborder_shape"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/zqzx_font_light"
        android:textSize="12sp"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/special_lvitem_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/special_lvitem_iv"
        android:layout_below="@id/special_lvitem_iv"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@id/special_lvitem_tv_con"
        android:textColor="@color/zqzx_font_normal"
        android:textSize="18sp"/>

</RelativeLayout>