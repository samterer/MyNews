<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/zq_loginwelbg_rl"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ImageView
        android:id="@+id/zq_loginwel_iv_back"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/zq_back_selector"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="@string/title_login"
        android:textColor="@color/white"
        android:textSize="18sp"/>

    <ImageView
        android:id="@+id/zq_loginwel_iv_logo"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:src="@drawable/zq_loginwel_icon"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/zq_loginwel_iv_account"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_below="@id/zq_loginwel_iv_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        android:background="@drawable/zq_login_account_selector"
        android:text="@string/login"/>

    <ImageView
        android:id="@+id/zq_loginwel_iv_tenet"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="80dp"
        android:layout_marginRight="-10dp"
        android:layout_toLeftOf="@id/zq_loginwel_iv_logo"
        android:src="@drawable/zq_login_wechat_selector"/>


    <ImageView
        android:id="@+id/zq_loginwel_iv_sina"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="80dp"
        android:layout_marginLeft="-10dp"
        android:layout_toRightOf="@id/zq_loginwel_iv_logo"
        android:src="@drawable/zq_login_sina_selector"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/zq_loginwel_iv_sina"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:text="无需注册，用常用社交账户一键登录"
        android:textColor="@color/white"
        android:textSize="14sp"
        />

</RelativeLayout>
