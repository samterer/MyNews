<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.hzpd.custorm.CircleImageView
            android:id="@+id/my_avatar"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/details_comment_user_avatar" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/details_comment_triangle"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="10dp"
            android:orientation="vertical">

            <com.hzpd.ui.widget.FontTextView
                android:id="@+id/mycomment_news"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:drawablePadding="5dp"
                android:paddingTop="4dp"
                android:text="@string/prompt_i_has_comment"
                android:textColor="?my_comment_nickname"
                android:textSize="16sp" />

            <com.hzpd.ui.widget.FontRobotoTextView
                android:id="@+id/mycomments_itemc_tv_sj_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:drawablePadding="3dp"
                android:gravity="center_vertical"
                android:text="09-27"
                android:textColor="?my_comment_time"
                android:textSize="12sp" />

            <com.hzpd.ui.widget.FontTextView
                android:id="@+id/mycomments_itemc_tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:textColor="?my_comment_news_title"
                android:textSize="18sp" />



            <View
                android:id="@+id/view_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/details_lv_dotted_line1"
                android:visibility="gone"/>
        </LinearLayout>


        <com.hzpd.ui.widget.FontTextView
            android:id="@+id/cm_item_tv_comstate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:background="@drawable/comment_item_shape"
            android:text="@string/prompt_auditing"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:visibility="gone" />

        <com.hzpd.ui.widget.FontTextView
            android:id="@+id/mycomments_itemc_tv_prise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="8dp"
            android:drawableLeft="@drawable/bt_zan_unselected"
            android:drawablePadding="3dp"
            android:textColor="@color/grey_font"
            android:textSize="16sp"
            android:visibility="gone" />
    </LinearLayout>


</LinearLayout>
