<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/check_item1_main_root"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:descendantFocusability="blocksDescendants"
              android:paddingTop="5dp"
              android:paddingBottom="5dp"
              android:paddingLeft="10dp"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/check_comment1_ll_pop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/check_comment1_touxiang_img"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/icon_comment_touxiang"/>

        <TextView
            android:id="@+id/check_comment1_name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:textSize="15sp"
            android:textColor="@color/blue_title_bg"
            android:text="匿名网友"/>

        <TextView
            android:id="@+id/check_comment1_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginRight="10dp"
            android:textColor="@color/grey_font"/>

    </LinearLayout>

    <TextView
        android:id="@+id/check_comment1_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:text="为什么不能评论！"/>

    <LinearLayout
        android:id="@+id/check_comment_reply2_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    </LinearLayout>

</LinearLayout>