<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/findpwdback_root_ll"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@color/white">

    <include
        layout="@layout/stitle_layout"/>
    <!-- 验证码 -->
    <LinearLayout
        android:id="@+id/pib_ll_veify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/lgr_edittext_root"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="30dip"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:orientation="horizontal"
                android:background="@drawable/login_shape">

                <EditText
                    android:id="@+id/pib_et_phone_id"
                    android:layout_width="match_parent"
                    android:layout_height="50dip"
                    android:layout_marginLeft="8dip"
                    android:background="@color/transparent"
                    android:hint="@string/hint_input_phone"
                    android:maxLines="1"
                    android:inputType="phone"
                    android:drawableLeft="@drawable/icon_phone"
                    android:paddingBottom="3dip"
                    android:paddingLeft="3dip"
                    android:paddingRight="3dip"
                    android:paddingTop="3dip"
                    android:textColor="@color/black"
                    android:textSize="18sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="50dip"
                    android:background="@drawable/login_shape">

                    <EditText
                        android:id="@+id/pib_et_sms_id"
                        android:layout_width="match_parent"
                        android:layout_height="50dip"
                        android:background="@color/transparent"
                        android:ellipsize="end"
                        android:hint="@string/hint_msm_captcha"
                        android:drawableLeft="@drawable/icon_email"
                        android:maxLines="1"
                        android:paddingBottom="3dp"
                        android:paddingRight="3dp"
                        android:paddingTop="3dp"
                        android:paddingLeft="11dp"
                        android:textCursorDrawable="@null"
                        android:textColor="@color/black"
                        android:textSize="18sp"/>
                </RelativeLayout>

                <Button
                    android:id="@+id/pib_bt_get"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/prompt_get"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/login_bt_login_selector"/>
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/pib_bt_verify"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:layout_gravity="center_horizontal"
            android:text="@string/prompt_bind"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_marginTop="20dip"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/login_bt_login_selector"/>
    </LinearLayout>
    <!-- 绑定河马-->
    <LinearLayout
        android:id="@+id/pib_ll_reset"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:background="@drawable/login_shape">

            <EditText
                android:id="@+id/pib_et_pwd_id"
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:layout_marginLeft="8dip"
                android:background="@color/transparent"
                android:hint="@string/hint_account"
                android:maxLines="1"
                android:drawableLeft="@drawable/icon_suppliers"
                android:paddingBottom="3dip"
                android:paddingLeft="3dip"
                android:paddingRight="3dip"
                android:paddingTop="3dip"
                android:textCursorDrawable="@null"
                android:textColor="@color/black"
                android:textSize="18sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:background="@drawable/login_shape">

            <EditText
                android:id="@+id/pib_et_pwd_id2"
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:layout_marginLeft="8dip"
                android:background="@color/transparent"
                android:hint="@string/hint_password"
                android:maxLines="1"
                android:drawableLeft="@drawable/icon_lock"
                android:paddingBottom="3dip"
                android:paddingLeft="3dip"
                android:paddingRight="3dip"
                android:paddingTop="3dip"
                android:inputType="textPassword"
                android:textCursorDrawable="@null"
                android:textColor="@color/black"
                android:textSize="18sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:orientation="vertical">

            <Button
                android:id="@+id/pib_bt_submmit"
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:layout_gravity="center_horizontal"
                android:text="@string/prompt_bind"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:background="@drawable/login_bt_login_selector"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
