<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <TextView
        android:id="@+id/lotteryv_tv_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:padding="15dp"
        android:textColor="@color/grey_font"/>

    <TextView
        android:id="@+id/lotteryv_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/grey_font"
        android:padding="15dp"
        android:lineSpacingMultiplier="1.2"/>

    <com.hzpd.custorm.LotteryView
        android:id="@+id/lotteryv"
        android:layout_width="210dp"
        android:layout_height="80dp"
        android:layout_marginTop="15dp"
        android:visibility="gone"
        android:background="#efefef"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/lotteryv_tv_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:padding="10dp"
        android:drawableLeft="@drawable/horn"
        android:drawablePadding="5dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/grey_font"
        android:visibility="gone"/>

    <Button
        android:id="@+id/lottery_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        android:text="@string/prompt_accept_award"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_gravity="center_horizontal"
        android:textSize="18sp"
        android:visibility="gone"
        android:background="@drawable/login_bt_login_selector"/>

</LinearLayout>