<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_kuozhanlan">

        <ImageView
            android:id="@+id/pop_fenxiang_img"
            android:layout_width="55dp"
            android:layout_height="21dp"
            android:layout_margin="8dp"
            android:src="@drawable/bt_fenxiang_unselected"/>

        <ImageView
            android:id="@+id/pop_shoucang_img"
            android:layout_width="55dp"
            android:layout_height="21dp"
            android:layout_margin="8dp"
            android:src="@drawable/bt_shoucang_unselected"/>

        <ImageView
            android:id="@+id/pop_ziti_img"
            android:layout_width="55dp"
            android:layout_height="21dp"
            android:layout_margin="8dp"
            android:src="@drawable/bt_ziti_unselected"/>

        <ImageView
            android:id="@+id/pop_xiazai_iv"
            android:layout_width="55dp"
            android:layout_height="21dp"
            android:layout_margin="8dp"
            android:visibility="gone"
            android:src="@drawable/bt_xiazai_unselected"/>
    </LinearLayout>
</LinearLayout>
