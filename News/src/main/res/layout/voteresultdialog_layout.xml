<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:background="@drawable/tsbl_dialogbg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue_title_bg"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/vote_dialog_name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:text="@string/prompt_vote"/>

        <LinearLayout
            android:id="@+id/vote_close"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/tsbl_close"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/vote_dia_tv1"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:textColor="@color/grey_font"
        android:textSize="16sp"
        android:gravity="center"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/grey_font"/>

    <Button
        android:id="@+id/vote_dia_bu2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textColor="@color/grey_font"
        android:textSize="18sp"
        android:background="@null"
        android:gravity="center"
        />

</LinearLayout>
