<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/details_related_comments"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fragment_background"
    android:orientation="vertical">

    <View
        android:id="@+id/top_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/details_bottom_line"
        android:visibility="gone" />

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:layout_below="@+id/top_line"
        android:layout_marginTop="10dp"
        android:background="#f5f5f5"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/details_bg_color"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/details_comments_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/article_hot_comment" />

            <com.hzpd.ui.widget.FontTextView
                android:id="@+id/relate_news"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:text="@string/details_lv_3"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/comcount_adapter_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/details_comment_counts_selector"
                android:paddingLeft="10dp"
                android:text=""
                android:textSize="16sp"
                android:visibility="gone"/>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>