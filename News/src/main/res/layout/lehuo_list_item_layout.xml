<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/newsitemlehuo"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:paddingLeft="12dp"
    android:gravity="center_vertical"
    android:paddingRight="12dp">

    <ImageView
        android:id="@+id/lehuo_img_id"
        android:layout_width="85dip"
        android:layout_height="65dip"
        android:layout_marginRight="10dp"
        android:src="@drawable/lehuo_bg"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/lehuo_img_id"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lehuo_content_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minLines="2"
            android:textColor="@color/zqzx_font_normal"
            android:textSize="19sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lehuo_sj_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="09-27 "
                android:drawableLeft="@drawable/itemtime"
                android:drawablePadding="3dp"
                android:gravity="center_vertical"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="4dp"
                android:textColor="@color/zqzx_font_light"
                android:visibility="invisible"
                android:textSize="15sp"/>

            <ImageView
                android:id="@+id/lehuo_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:visibility="gone"
                />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
