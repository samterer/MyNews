<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white" >

    <RelativeLayout
        android:id="@+id/xf_comments_rl_head"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/xf_comments_iv_back"
           android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:src="@drawable/xf_back"/>
    </RelativeLayout>
    
    <com.hzpd.custorm.DotView
        android:id="@+id/xf_newshtmldetail_rdv_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="10dp" />

    <WebView
        android:id="@+id/xf_comments_wv_detail"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E2E2E2"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp" >

        <EditText
            android:id="@+id/xf_comment_et_comment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="写跟贴"
            android:textColor="#777775"
            android:textColorHint="#777775"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/xf_comment_tv_publish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:singleLine="true"
            android:text="发帖"
            android:textColor="#777775"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>